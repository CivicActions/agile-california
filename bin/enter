#!/usr/bin/env bash

source $(dirname $0)/../lib/bowline/bowline
assert_running

if [[ "$1" = "sudo" ]]; then
  shift;
  cmd='bash'
  [[ "$@" ]] && cmd=$@
  echo "Running '${cmd}' as root inside container"
  docker exec -it ${web} ${cmd}
  exit
fi

cmd='bash'
[[ "$@" ]] && cmd=$@

echo "Running '${cmd}' inside container"
docker exec -it ${web} sudo -iu www-data ${cmd}
